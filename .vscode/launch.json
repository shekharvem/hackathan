    "version": "0.2.0",
    "configurations": [
        {   "name": "Attach with Debugger",
            "type": "pwa-msedge",
            "request": "launch",           
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"            
        },
        {   "name": "Run and Debug",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}" ,
            "preLaunchTask": "ng serve"           
        }
    ]
}